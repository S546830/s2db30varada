extends layout 
 
block content 
    h1= title 
    
    if (toShow == null) 
        h2 No instance to detail 
    else 
        - let umbrellasid = toShow._id 
        - let itemname = toShow.itemname
        - let quantity = toShow.quantity
        - let price= toShow.price
    div 
        div.row 
            div(class='umbrellasAttr mr-3') umbrellas ID is: 
            div #{umbrellasid} 
        div.row 
            div(class='umbrellasAttr mr-3') itemname is: 
            div #{itemname} 
        div.row 
            div(class='umbrellasAttr mr-3') quantity is: 
            div #{quantity} 
        div.row 
            div(class='umbrellasAttr mr-3') price is: 
            div #{price} 